{
  "name": "@qualweb/util",
  "version": "0.6.0-alpha5",
  "description": "Utilities module for qualweb",
  "main": "dist/util.bundle.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "tsc": "tsc",
    "test": "mocha",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prebuild": "npm run format && rimraf prebuild && rimraf dist",
    "build": "tsc --build && webpack --mode production",
    "postbuild": "rimraf prebuild",
    "docs": "typedoc --out docs src/index.ts",
    "prepare": "npm run build"
  },
  "homepage": "https://github.com/qualweb/util#readme",
  "bugs": {
    "url": "https://github.com/qualweb/util/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qualweb/util.git"
  },
  "keywords": [
    "qualweb",
    "accessibility",
    "util",
    "lib"
  ],
  "author": "Jo√£o Vicente",
  "license": "ISC",
  "devDependencies": {
    "@qualweb/dom": "0.2.4",
    "@qualweb/qw-page": "0.3.0-alpha3",
    "@qualweb/types": "0.8.0-alpha8",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^16.11.13",
    "@types/string-pixel-width": "^1.7.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.3.4",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "puppeteer": "^10.4.0",
    "rimraf": "^3.0.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.1.1"
  },
  "dependencies": {
    "franc-min": "^6.0.0",
    "server-text-width": "^1.0.2",
    "string-pixel-width": "^1.10.0"
  }
}
